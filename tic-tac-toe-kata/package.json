{
  "name": "tic-tac-toe-kata",
  "version": "0.0.1",
  "description": "Tic Tac Toe Kata",
  "contributors": [
    "Miguel Ignacio Cabrera San Gil <miguel.cabrera@leanmind.es>",
    "Carlos Ble <carlos@leanmind.es>"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "playwright install --with-deps",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "ensure": "npm run type-check && npm run lint && npm test && npm run e2e",
    "build": "npm run ensure && vite build",
    "serve": "npm run build && vite preview",
    "dev": "vite"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "^1.49.1",
    "@types/node": "^22.10.7",
    "@vitest/coverage-v8": "^2.1.8",
    "typescript": "~5.7.3",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  }
}
